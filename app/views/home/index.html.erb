<p class="lead"><strong>Select User to see its metrics</strong></p>
<form action="<%= get_user_path %>" method = "POST" class="form-horizontal"  data-remote="true">
    <select name="user_id" id="user_id">
        <% @ids.each do |id| %>
        <option value="<%= id %>"><%= id %></option>
        <% end -%>
    </select>
    <button class="btn">Submit</button>
</form>
<hr>

<canvas id="myChart" width="300" height="300"></canvas>
<div id="caption" hidden><strong>Pie Chart showing Tasks completed by user</strong></div>
